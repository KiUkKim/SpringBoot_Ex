{{>layout/header}}
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
            </div>

            <div class="form-group">
                <label for="type">유형</label>
                <input type="text" class="form-control" id="type" placeholder="유형을 입력하세요">
            </div>

            <div class="form-group">
                <label for="author">저자</label>
                <input type="text" class="form-control" id="author" placeholder="작성자를 입력하세요">
            </div>

            <div class="form-group">
                <label for="sign">서명</label>
                <input type="text" class="form-control" id="sign" placeholder="서명을 입력하세요">
            </div>

            <div class="form-group">
                <label for="author">publish</label>
                <input type="text" class="form-control" id="publish" placeholder="출판사를 입력하세요">
            </div>

            <div class="form-group">
                <label for="shape">형태</label>
                <input type="text" class="form-control" id="shape" placeholder="형태를 입력하세요">
            </div>

        </form>
        <a href="/" role="button" class="btn btn-primary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-book-save">등록</button>
    </div>
</div>
{{>layout/footer}}